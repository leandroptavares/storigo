<!-- show existing reviews section -->
<div class="reviewbigcontainer">
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <div class="card">
          <div class="card-header">
            <% review.rating.times do %>
              <i class="fa-solid fa-star"></i>
            <% end %>
            <% (5 - review.rating).times do %>
              <i class="fa-regular fa-star"></i>
            <% end %>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= review.comment %></p>
              <footer class="blockquote-footer"><%= review.user.username %>
              <p><cite title="Source Title">Published on <%= review.created_at.strftime("%d/%m/%Y") %></cite></p></footer>
            </blockquote>
          </div>
          <% if current_user && review.user_id == current_user.id %>
            <%= link_to review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete", style: "color:black" do %>
                <i class="fa-solid fa-trash"></i> Delete review
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>


<!-- review Section -->
<!-- add new review Section -->

<% if current_user %>
    <% if @book.reviews.any? { |review| review.user_id == current_user.id } %>
      <div class="alert alert-success" role="alert">
        We've got your review!
      </div>
    <% else %>
      <%= simple_form_for [@book, @review] do |f| %>
        <%= f.input :comment, class: "reviewbox" %>
        <p>Rating
          <%= f.select :rating, options_for_select([1, 2, 3, 4, 5], @review.rating), class: "rating-dropdown" %>
        </p>
        <%= f.submit class: "buttons" %>
      <% end %>
  <% end %>
<% end %>
