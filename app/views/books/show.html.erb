<div class="book-container">
  <button>See details</button>
  <div class="book-cover">
    <%= image_tag(@book.cover_image, alt: @book.title) %>
  </div>
  <div class="book-txt">
    <h2><%= @book.title %></h2>
    <p>by <%= @book.author %></p>
  </div>
  <% if current_user.books.include?(@book) %>
    <p>This books has already been added to your bookshelf</p>
  <% else %>
    <%= button_to "Add to bookshelf", user_books_path(book_id: @book.id) %>
  <% end %>
  <p>Buy from:</p>
  <ul>
    <li><%= link_to "Amazon Books", "https://www.amazon.com/s?k=#{@book.title}", target: "_blank" %></li>
    <li><%= link_to "The American Book Center", "#" %></li>
    <li><%= link_to "eBay", "#" %></li>
  </ul>
  <h1>Reviews</h1>
</div>
